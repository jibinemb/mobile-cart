
    <section>
      <div class="container mt-5">
        <div class="row">
            {{#each products}}
             
          <div class="col-md-3 p-3">
            <div class="card" style="width: 10rem; height:23rem">
              <img
                class="card-img-top"
                src="/product-images/{{this._id}}.jpg"
                alt="Card image cap"
                style="height: 12rem;"
              />
              <div class="card-body">
                <h5 class="card-title">{{this.Name}}</h5>
                <p class="card-text">{{this.Description}}</p>
                <a  class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</a>
                {{!-- <button onclick="addToCart('{{this._id}}')"
                                class="btn btn-primary" 
                                color:white">Add to Cart</button> --}}
