                {{!-- <button onclick="addToCart('{{this._id}}')"
                                class="btn btn" style="background-color:
                                #2874f0;
                                color:white">Add to Cart</button> --}}
              </div>
            </div>
          </div>
          {{/each}}
             
          </div>

        </div>
      </div>
    </section>

